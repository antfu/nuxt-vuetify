{
  "root": true,
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "node": true
  },
  "extends": "standard",
  // required to lint *.vue files
  "plugins": [
    "html"
  ],
  // add your custom rules here
  "rules": {
    "space-before-function-paren": 0,
    "comma-dangle": ["error", "only-multiline"]
  },
  "globals": {}
}
